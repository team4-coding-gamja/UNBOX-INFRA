{
  "dashboard": {
    "title": "System Overview - UNBOX",
    "tags": ["unbox", "overview", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "전체 서비스 상태",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(up{namespace=~\"unbox-.*\"} == 1)",
            "legendFormat": "Running Services"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "title": "전체 요청 수 (RPS)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"unbox-.*\"}[5m]))",
            "legendFormat": "Requests/sec"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "title": "전체 에러율",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"5..\",namespace=~\"unbox-.*\"}[5m])) / sum(rate(http_requests_total{namespace=~\"unbox-.*\"}[5m]))) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "unit": "percent"
          }
        }
      },
      {
        "id": 4,
        "title": "평균 응답 시간 (P95)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{namespace=~\"unbox-.*\"}[5m])) by (le))",
            "legendFormat": "P95 Latency"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "서비스별 요청 수",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{namespace=~\"unbox-.*\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "서비스별 에러율",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"5..\",namespace=~\"unbox-.*\"}[5m])) by (service) / sum(rate(http_requests_total{namespace=~\"unbox-.*\"}[5m])) by (service)) * 100",
            "legendFormat": "{{service}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate %"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "CPU 사용률 (Pod별)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=~\"unbox-.*\",container!=\"\"}[5m])) by (pod) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "메모리 사용률 (Pod별)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "(sum(container_memory_working_set_bytes{namespace=~\"unbox-.*\",container!=\"\"}) by (pod) / sum(container_spec_memory_limit_bytes{namespace=~\"unbox-.*\",container!=\"\"}) by (pod)) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory %"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{consumer_group}} - {{topic}}"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Lag"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "데이터베이스 연결 풀",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "hikaricp_connections_active{namespace=~\"unbox-.*\"}",
            "legendFormat": "{{service}} - Active"
          },
          {
            "expr": "hikaricp_connections_idle{namespace=~\"unbox-.*\"}",
            "legendFormat": "{{service}} - Idle"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      }
    ]
  }
}
