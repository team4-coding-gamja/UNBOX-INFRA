{
  "dashboard": {
    "title": "Service Details - UNBOX",
    "tags": ["unbox", "service", "details"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(http_requests_total{namespace=~\"unbox-.*\"}, service)",
          "current": {},
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": "",
          "sort": 1
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)",
          "current": {},
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": "unbox-.*",
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "$service - 요청 수 (RPS)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"$service\"}[5m]))",
            "legendFormat": "RPS"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 2,
        "title": "$service - 에러율",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(http_requests_total{status=~\"5..\",service=\"$service\"}[5m])) / sum(rate(http_requests_total{service=\"$service\"}[5m]))) * 100",
            "legendFormat": "Error Rate"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "$service - P95 응답 시간",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P95"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "$service - Pod 수",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"$namespace\",pod=~\"$service.*\"})",
            "legendFormat": "Pods"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 5,
        "title": "$service - HTTP 상태 코드 분포",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"$service\"}[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "$service - 응답 시간 분포",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P99"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "$service - CPU 사용률",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",pod=~\"$service.*\",container!=\"\"}[5m])) by (pod) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "$service - 메모리 사용률",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "(sum(container_memory_working_set_bytes{namespace=\"$namespace\",pod=~\"$service.*\",container!=\"\"}) by (pod) / sum(container_spec_memory_limit_bytes{namespace=\"$namespace\",pod=~\"$service.*\",container!=\"\"}) by (pod)) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory %"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "$service - JVM Heap 사용률",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{service=\"$service\",area=\"heap\"} / jvm_memory_max_bytes{service=\"$service\",area=\"heap\"}) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Heap %"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "$service - GC 시간",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum{service=\"$service\"}[5m])",
            "legendFormat": "{{pod}} - {{action}}"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "GC Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "$service - 데이터베이스 연결 풀",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "hikaricp_connections_active{service=\"$service\"}",
            "legendFormat": "{{pod}} - Active"
          },
          {
            "expr": "hikaricp_connections_idle{service=\"$service\"}",
            "legendFormat": "{{pod}} - Idle"
          },
          {
            "expr": "hikaricp_connections_max{service=\"$service\"}",
            "legendFormat": "{{pod}} - Max"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "$service - 데이터베이스 쿼리 시간",
        "type": "graph",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(hikaricp_connections_usage_seconds_bucket{service=\"$service\"}[5m])) by (le))",
            "legendFormat": "P95 Query Time"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Query Time"},
          {"format": "short"}
        ]
      }
    ]
  }
}
